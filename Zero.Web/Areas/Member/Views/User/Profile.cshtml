@{
    Layout = "~/Areas/Member/Views/Shared/_Center.cshtml";
    ViewBag.Title = "Index";
}

@model Zero.Domain.Users.User

<div class="member-infos fr w955">
    <h3 class="operate-title mt20">用户信息</h3>
    <div class="operate-items mt20"> <a class="j-item now" href="/member/user/profile">个人资料</a> <a class="j-item" href="/member/user/secure">账户安全</a> </div>
    <div class="infos">
    <div class="infos-item j-infos-item" style="display:block;">
        <form id="form" action="/member/user/Profile" method="post">


        <p class="p-item top-line"> <span>用户名</span> <i>@Model.UserName</i> </p>
        <p class="p-item top-line"> <span>昵称</span>
            <input type="text"  id="Nick"  name="Nick" class="form-control"  value="@Model.Nick" />
        </p>
        <p class="p-item top-line"> <span>真实姓名</span>
            <input type="text" id="RealName"  name="RealName" class="form-control" value="@Model.RealName"/>
        </p>
        <p class="p-item top-line"> <span>QQ</span>
            <input type="text" id="QQ"  name="QQ" class="form-control" value="@Model.QQ"/>
        </p>
        <p class="p-item top-line" style="padding-bottom:50px;">
            <a class="btn btn-danger confirm-modify" onclick="ajaxSubmitForm('form','/member/user/')">确认修改</a>
        </p>
        </form>
    </div>
</div>
</div>

