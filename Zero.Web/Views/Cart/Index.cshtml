@{
    Layout = "~/Views/Shared/Order/_Layout.cshtml";
    ViewBag.Title = "Detail";
}

@model List<Zero.Domain.Orders.Cart>

<div class="block950">

    <div class="step step1">
        <ul class="ul1">
            我的购物车
        </ul>
        <ul class="ul2">
            填写购物信息
        </ul>
        <ul class="ul2">
            成功提交订单
        </ul>
    </div>

    <script type="text/javascript" src="js/showdiv.js"></script>
    <script type="text/javascript">
        var user_name_empty = "请输入您的用户名！";
        var email_address_empty = "请输入您的电子邮件地址！";
        var email_address_error = "您输入的电子邮件地址格式不正确！";
        var new_password_empty = "请输入您的新密码！";
        var confirm_password_empty = "请输入您的确认密码！";
        var both_password_error = "您两次输入的密码不一致！";
        var show_div_text = "请点击更新购物车按钮";
        var show_div_exit = "关闭";
    </script>


    <div class="flowBox">

        <form id="formCart" name="formCart" method="post" action="flow.php">
            <table class="tbCartList" width="100%" align="center" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff" style="">
                <tr>
                    <th bgcolor="#ffffff" style="width: 50px;"><input type="checkbox" id="check_all" /><label for="check_all">全选</label></th>
                    <th bgcolor="#ffffff" style="width: 250px;">商品名称</th>
                    <th bgcolor="#ffffff" style="width: 120px;">规格</th>
                    <!--  <th bgcolor="#ffffff">市场价</th> -->
                    <th bgcolor="#ffffff">本店价</th>
                    <th bgcolor="#ffffff">购买数量</th>
                    <th bgcolor="#ffffff">小计</th>
                    <th bgcolor="#ffffff" class="norBorder">操作</th>
                </tr>
                @foreach (var cart in @Model)
                {
                    <tr>
                    <td align="right" bgcolor="#ffffff"><input type="checkbox" id="SkuId" name-"SkuId" /></td>
                    <td class="td_name" bgcolor="#ffffff" align="center">
                        <a href="goods.php?id=398" target="_blank">
                            <img style="width: 90px; height: 90px; border: 1px solid #ccc; margin-bottom: 10px;" src="images/201403/thumb_img/398_thumb_G_1395885516378.jpg" border="0" title="" />
                        </a><br />
                        <a href="goods.php?id=398" target="_blank">@cart.Product.ProductName</a>
                    </td>
                    <td bgcolor="#ffffff" style=" text-align:left;padding-left:10px;">
                        @foreach (var attrList in cart.Attr.Split(','))
                        {
                            var attr=attrList.Split(':');
                            @(attr[2] + ":" + attr[3]);
                            <text><br /></text>
                        }
                    </td>
                    <!-- <td align="right" bgcolor="#ffffff">￥4200.00元</td>-->
                    <td align="right" class="td_price" bgcolor="#ffffff">￥@cart.Sku.Price.ToString()元</td>
                    <td align="right" bgcolor="#ffffff">
                        <input type="text" name="goods_number[1380]" id="goods_number_1380" value="@cart.Quantity" size="4" class="inputBg" style="text-align: center; width: 60px;" onkeydown="showdiv(this)" />
                    </td>
                    <td align="right" class="td_price" bgcolor="#ffffff">￥@(cart.Sku.Price * cart.Quantity)元</td>
                    <td align="center" bgcolor="#ffffff" class="norBorder textLink">
                        <a href="javascript:if (confirm('您确实要把该商品移出购物车吗？')) location.href='flow.php?step=drop_goods&amp;id=1380'; " class="f6">删除</a>
                    </td>
                </tr>
                }

                @*<tr>
                    <td class="td_name" bgcolor="#ffffff" align="center">
                        <a href="goods.php?id=398" target="_blank">
                            <img style="width: 90px; height: 90px; border: 1px solid #ccc; margin-bottom: 10px;" src="images/201403/thumb_img/398_thumb_G_1395885516378.jpg" border="0" title="ECSHOP模板堂寺库中国奢侈品网2014全网首发" />
                        </a>
                    </td>
                    <td bgcolor="#ffffff">
                        <a href="goods.php?id=398" target="_blank">ECSHOP模板堂寺库中国奢侈品网2014全网首发</a>
                    </td>
                    <!-- <td align="right" bgcolor="#ffffff">￥4200.00元</td>-->
                    <td align="right" class="td_price" bgcolor="#ffffff">￥3500.00元</td>
                    <td align="right" bgcolor="#ffffff">
                        <input type="text" name="goods_number[1380]" id="goods_number_1380" value="1" size="4" class="inputBg" style="text-align: center; width: 60px;" onkeydown="showdiv(this)" />
                    </td>
                    <td align="right" class="td_price" bgcolor="#ffffff">￥3500.00元</td>
                    <td align="center" bgcolor="#ffffff" class="norBorder textLink">
                        <a href="javascript:if (confirm('您确实要把该商品移出购物车吗？')) location.href='flow.php?step=drop_goods&amp;id=1380'; " class="f6">删除</a>
                    </td>
                </tr>*@


            </table>
            <table class="tbCartList" width="100%" align="center" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff">
                <tr>
                    <td bgcolor="#ffffff" class="norBorder" style="text-align: left; background: #f5f5f5; padding-left: 5px;border-bottom: 2px solid #dadada">
                        <input type="checkbox" id="check_all" /><label for="check_all">全选</label>&nbsp;&nbsp;
                        <input type="button" value="清空购物车" class="bnt_blue_1" onclick="location.href = 'flow.php?step=clear'" />&nbsp;&nbsp;
                        <input name="submit" type="submit" class="bnt_blue_1" value="更新购物车" />
                    </td>
                    <td bgcolor="#ffffff" class="norBorder td_price" style="text-align: right; background: #f5f5f5; padding-right: 10px; border-bottom: 2px solid #dadada">
                        购物金额小计 ￥3500.00元                            ，比市场价 ￥4200.00元 节省了 ￥700.00元 (17%)
                    </td>
                </tr>
            </table>
            <input type="hidden" name="step" value="update_cart" />
        </form>
        <table style="margin-top: 10px;" width="100%" align="center" border="0" cellpadding="0" cellspacing="0" bgcolor="#dddddd">
            <tr>
                <td bgcolor="#ffffff"><a href="./">
                    <img src="/content/images/continue.gif" alt="continue" /></a></td>
                <td bgcolor="#ffffff" style="text-align: right"><a href="flow.php?step=checkout">
                    <img src="/content/images/checkout.gif" alt="checkout" /></a></td>
            </tr>
        </table>
    </div>
    <div class="blank"></div>


</div>
