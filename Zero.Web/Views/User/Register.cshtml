@{
    Layout = "~/Views/Shared/Order/_Layout.cshtml";
    ViewBag.Title = "Detail";
}

@section Contents {
    @System.Web.Optimization.Styles.Render("~/content/css/user.css")

    @System.Web.Optimization.Scripts.Render("~/content/js/utils.js")
    @System.Web.Optimization.Scripts.Render("~/content/js/user.js")
}


<div class="usBox clearfix">
    <div class="usBox_top">
        <a href="/user/login">登陆</a>
        <a href="/user/register" class="active">注册</a>
        <a href="/user/getPassword">找回密码</a>
    </div>
    @*<div class="longTop">Hi，新朋友，欢迎注册模板堂，以下各项均必填。如注册遇到困难，请 <a href="http://bizapp.qq.com/webc.htm?new=0&sid=800007167&o=b.qq.com&q=7" class="c4095ce">联系我们</a>  :)</div>*@


    <form action="/user/register" method="post" name="formUser" onsubmit="return register();">
        <table width="100%" class="norTable register">
            <tbody>
                <tr>
                    <th width="100">用户名</th>
                    <td>
                        <input name="username" type="text" size="25" id="username" onblur="is_registered(this.value);" class="inputBg" />
                        <span id="username_notice" style="color: #FF0000">*</span>
                    </td>
                    <td width="435" class="leftBorder center" rowspan="9" style="color: #FFF; border-bottom: none">
                        <img src="/content/images/user_img.jpg" style="padding-left: 5px;" />
                    </td>
                </tr>
                <tr>
                    <th>密码</th>
                    <td>
                        <input name="password" type="password" id="password1" onblur="check_password(this.value);" onkeyup="checkIntensity(this.value)" class="inputBg" />
                        <span style="color: #FF0000" id="password_notice">*</span>

                    </td>
                </tr>

                <tr>
                    <th>密码强度</th>
                    <td>

                        <table width="260" border="0" cellspacing="0" cellpadding="1">
                            <tr align="center">
                                <td width="33%" id="pwd_lower">弱</td>
                                <td width="33%" id="pwd_middle">中</td>
                                <td width="33%" id="pwd_high">强</td>
                            </tr>
                        </table>
                    </td>
                </tr>


                <tr>
                    <th>确认密码</th>
                    <td>
                        <input name="confirm_password" type="password" id="conform_password" onblur="check_conform_password(this.value);" class="inputBg" />
                        <span style="color: #FF0000" id="conform_password_notice">*</span>

                    </td>
                </tr>

                <tr>
                    <th>邮箱</th>
                    <td>
                        <input name="email" type="text" size="25" id="email" onblur="checkEmail(this.value);" class="inputBg" />
                        <span id="email_notice" style="color: #FF0000">*</span>
                    </td>
                </tr>
                <tr>
                    <th>qq</th>
                    <td>
                        <input name="qq" type="text" size="25" id="qq" onblur="checkEmail(this.value);" class="inputBg" />
                        <span id="qq_notice" style="color: #FF0000"></span>
                    </td>
                </tr>
                <tr>
                    <th>手机</th>
                    <td>
                        <input name="mobile" type="text" size="25" id="mobile" class="inputBg" />
                        <span id="mobile_notice" style="color: #FF0000"></span>
                    </td>
                </tr>

                <tr>
                    <th></th>
                    <td>
                        <label>
                            <input name="agreement" type="checkbox" value="1" checked="checked" />
                            我已看过并接受《<a href="article.php?cat_id=-1" style="color: blue" target="_blank">用户协议</a>》</label>

                    </td>

                    <tr>
                        <th style="border-bottom: none"></th>
                        <td style="border-bottom: none">
                            <input name="act" type="hidden" value="act_register">
                            <input type="hidden" name="back_act" value="" />
                            <input name="Submit" type="submit" value="注 册" class="user_bnt">
                        </td>
                    </tr>
            </tbody>
        </table>
        <script>
            $(function () {

            });
        </script>
    </form>
</div>

