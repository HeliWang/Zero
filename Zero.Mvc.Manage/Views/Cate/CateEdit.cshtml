@model Zero.Domain.Cates.Cate
@{
    Layout = "~/Views/Shared/_Edit.cshtml";
    ViewBag.Title = "CateEdit";
}

@if (Model != null)
{
<form id="Form" action="@Url.Action("CateEdit","Cate")" method="post">
    <table class="z-tb-form">
        <tr>
            <th>所属分类：</th>
            <td>
                <input name="Pid"  data-options="url:'@Url.Action("CateListJson","Cate")'" value="@Model.Pid" class="easyui-combotree"  style="width:200px;">
            </td>
        </tr>
        <tr>
            <th>名称：</th>
            <td>
                <input type="hidden" name="CateId"  value="@Model.CateId"/>
                <input type="text" name="CateName" value="@Model.CateName" class="easyui-validatebox" data-options="required:true" style="width:150px;"/>
            </td>
        </tr>
    </table>
</form>
 }